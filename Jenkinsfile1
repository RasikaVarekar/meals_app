pipeline {
    agent any

    environment {
        FLUTTER_HOME = "C:\flutter_windows_3.24.4-stable\flutter\bin"
        JAVA_HOME = "C:/Program Files/Java/jdk-17/bin"
        //GIT_PATH = "C:/Program Files/Git/bin"
        GIT_PATH = "C:/Program Files/Git/cmd"
    //     ANDROID_SDK_ROOT = "C:\\jenkins-agent\\android-sdk"
    //     PATH = "${FLUTTER_HOME}\\bin;${ANDROID_SDK_ROOT}\\cmdline-tools\\latest\\bin;${env.PATH}"
    //     MY_ENV_VAR = "Custom Value for Flutter Build"
    // }
    }

    options {
        timeout(time: 20, unit: 'MINUTES')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    def gitRepoUrl = 'https://github.com/RasikaVarekar/meals_app.git'
                    checkout([$class: 'GitSCM', 
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: gitRepoUrl]],
                        extensions: [[$class: 'CleanBeforeCheckout']]
                    ])
                }
            }
        }

        stage('Flutter Clean') {
            steps {
                bat '''
                echo üßπ Running flutter clean...
                flutter clean || (echo ‚ùå Flutter clean failed! && exit 1)
                '''
            }
        }

        stage('Flutter Pub Get') {
            steps {
                bat '''
                echo üì¶ Fetching dependencies...
                flutter pub get || (echo ‚ùå flutter pub get failed! && exit 1)
                '''
            }
        }

        stage('Analyze Code') {
            steps {
                bat '''
                echo üîç Analyzing code...
                flutter analyze || echo ‚ö†Ô∏è Code analysis returned warnings but continuing...
                '''
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                echo üß™ Running tests...
                flutter test || (echo ‚ùå Tests failed! && exit 1)
                '''
            }
        }

        // Optional APK build on Windows
        // stage('Build APK') {
        //     steps {
        //         bat '''
        //         echo üì± Building APK (debug mode)...
        //         flutter build apk --debug || (echo ‚ùå APK build failed! && exit 1)
        //         '''
        //     }
        // }

        // stage('Check APK Output') {
        //     steps {
        //         bat '''
        //         echo üìÇ Checking APK output directory...
        //         dir build\\app\\outputs\\flutter-apk || (echo ‚ùå APK output not found! && exit 1)
        //         '''
        //     }
        // }
    }

    post {
        success {
            echo '‚úÖ Flutter build pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Flutter build pipeline failed!'
        }
    }
}
